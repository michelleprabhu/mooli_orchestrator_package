# MoolAI Orchestrator Configuration
# IMPORTANT: Change placeholder values before deployment

# === REQUIRED SETTINGS - MUST CHANGE ===
ORCHESTRATOR_DB_PASSWORD=CHANGE_ME_secure_orchestrator_db_password
JWT_SECRET=CHANGE_ME_must_match_controller_jwt_secret
CONTROLLER_URL=http://CHANGE_ME_CONTROLLER_IP_ADDRESS:9000
OPENAI_API_KEY=CHANGE_ME_your_openai_api_key

# === ORGANIZATION IDENTITY ===
ORG_ID=org_001
ORCHESTRATOR_ID=orchestrator_001
ORCHESTRATOR_PORT=8000

# === DISTRIBUTED DEPLOYMENT CONFIGURATION ===
# For separate systems deployment:
# 1. This orchestrator must reach controller at CONTROLLER_URL
# 2. Controller must reach this system on ports 8000 and 5434 for analytics

# === DATABASE PORTS (for debugging) ===
ORCHESTRATOR_DB_PORT=5434

# === AI SERVICE KEYS ===
# Optional: Anthropic API key for Claude models
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME_your_anthropic_key

# === DYNAROUTE INTEGRATION ===
# DynaRoute API key for cost-optimized AI routing (70% cost savings)
# Get your API key from DynaRoute dashboard
DYNAROUTE_API_KEY=dyn_CHANGE_ME_your_dynaroute_api_key
DYNAROUTE_ENABLED=true
DYNAROUTE_TIMEOUT=30
DYNAROUTE_CIRCUIT_BREAKER_THRESHOLD=3

# === AI MODEL CONFIGURATION ===
# Default model for user response generation (can be overridden per request)
# Supported models: gpt-4o, gpt-4, gpt-3.5-turbo, etc.
DEFAULT_USER_RESPONSE_MODEL=gpt-4o

# === PHOENIX AI OBSERVABILITY ===
PHOENIX_UI_PORT=6006
PHOENIX_GRPC_PORT=4317

# === AUTHENTICATION ===
ENVIRONMENT=development
MULTI_USER_MODE=true

# === LOGGING ===
LOG_LEVEL=INFO

# === VERSION ===
VERSION=1.0.0

# === DOCKER PROFILES ===
# To start with Phoenix observability, use:
# COMPOSE_PROFILES=with-phoenix docker-compose up -d

# === PHASE 1 INTEGRATION - ENHANCED SERVICES ===
# Firewall Configuration (Enhanced Presidio-based)
FIREWALL_ENABLED=true
FIREWALL_ALLOWLIST_TOPICS=
FIREWALL_BLOCK_ON_VIOLATION=true

# Caching Configuration (Semantic Similarity)
CACHE_ENABLED=true
USE_SEMANTIC_CACHE=true
SIMILARITY_THRESHOLD=0.85
CACHE_TTL=3600

# LLM Evaluation Configuration
LLM_EVALUATION_ENABLED=true
DOMAIN_CLASSIFICATION_ENABLED=true