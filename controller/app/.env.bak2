SSL_CERTFILE=app/certificates/server_cert.pem
SSL_KEYFILE=app/certificates/server_key.pem
SSL_CAFILE=app/certificates/ca.pem
# CERT_PATH=controller/certs/   # (legacy style, optional)

############################
# C-OCS internal HTTP (exported by ws_server.py)
# ws_server.py only uses the PORT; host is hardcoded to 0.0.0.0
############################
CONTROLLER_OCS_HTTP_PORT=8765
CONTROLLER_OCS_HTTP_HOST=localhost

