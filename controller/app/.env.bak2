# Logging
############################
LOG_LEVEL=INFO
DEBUG=true

############################
# FastAPI Controller (main.py)
# main.py uses HOST/PORT
############################
HOST=0.0.0.0
PORT=8765
CONTROLLER_SELF_BASE=http://127.0.0.1:8765
############################
# WebSocket Server (app/ws_server.py)
############################
CONTROLLER_HOST=0.0.0.0
CONTROLLER_PORT=8766
WEBSOCKET_KEEPALIVE_INTERVAL=10

# TLS for WS (leave disabled in dev)
